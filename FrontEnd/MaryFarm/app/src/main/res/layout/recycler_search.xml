<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/search_image_1"
        android:layout_width="300dp"
        android:layout_height="150dp"
        />
    <ImageView
        android:id="@+id/search_image_2"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/search_image_1"/>

    <ImageView
        android:id="@+id/search_image_3"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/search_image_1"
        android:layout_below="@+id/search_image_2" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/search_profile"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_below="@+id/search_image_1"
        android:layout_marginLeft="10dp"
        android:src="@color/purple_200"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/search_nickname"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/search_profile"
        android:layout_below="@id/search_image_1"

        />
    <TextView
        android:id="@+id/search_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/search_profile"
        android:layout_below="@id/search_nickname"
        />

<!--    <TextView-->
<!--        android:id="@+id/search_time"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_toRightOf="@id/search_nickname"-->
<!--        android:layout_below="@id/search_image_3"/>-->

</RelativeLayout>