<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:outlineProvider="bounds"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <ImageView
            android:id="@+id/farm_feed_main_photo"
            android:layout_width= "300dp"
            android:layout_height="200dp"
            android:padding="5dp"
            android:src="@drawable/sample1" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/farm_feed_sub1_photo"
                android:layout_width= "match_parent"
                android:layout_height="100dp"
                android:padding="5dp"
                android:src="@drawable/sample2" />

            <ImageView
                android:id="@+id/farm_feed_sub2_photo"
                android:layout_width= "match_parent"
                android:layout_height="100dp"
                android:padding="5dp"
                android:src="@drawable/sample3"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/farm_feed_title"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:text="관섭이 형이 키우던 콩나물, 슈킹해왔슴다~"
            android:paddingLeft="40dp"
            android:paddingTop="5dp"
            android:textStyle="bold"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/farm_feed_time"
            android:padding="10dp"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1시간 전" />
    </LinearLayout>
    <TextView
        android:id="@+id/farm_plant_date"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:paddingLeft="40dp"
        android:textStyle="italic"
        android:textColor="@color/purple_200"
        android:text="2022.10.16 - 2023.01.31"
        />
</LinearLayout>