<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chatProfileImg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="7.5dp"
        android:layout_marginTop="7.5dp"
        android:layout_marginEnd="7.5dp"
        android:layout_marginBottom="7.5dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/chatProfileImg">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chatNickname"
                android:textColor="@color/black"
                android:text=""/>
            <ImageView
                android:id="@+id/chatTierImg"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chatContent"
            android:textColor="#ACACAC"
            android:text="" />
    </LinearLayout>


    <ImageView
        android:id="@+id/chat_new"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/chat_new"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/chatDate"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/chatDate"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text=""
        android:textColor="#ACACAC"
        android:layout_marginHorizontal="15dp"/>

</RelativeLayout>