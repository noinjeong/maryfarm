<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Diary.DiaryAddActivity"
    android:orientation="vertical"
    android:id="@+id/addFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/Image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_launcher_background"
            android:minHeight="200dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/Camera_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:minHeight="50dp"
                android:drawableTop="@drawable/camera_icon_xml"
                android:text="카메라" />

            <Button
                android:id="@+id/Gallery_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:minHeight="50dp"
                android:text="갤러리"
                android:drawableTop="@drawable/gallery_icon_xml"
                android:layout_toRightOf="@+id/Camera_btn"/>

        </RelativeLayout>

        <Spinner
            android:id="@+id/Image_spinner"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:entries="@array/options"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:spinnerMode="dropdown"
            android:visibility="gone"
            />

    </FrameLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="제목"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:enabled="false"
        android:hint=" 작성한 제목 가져올 자리 "
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="식물종류"/>

    <TextView
        android:id="@+id/plants_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:enabled="false"
        android:hint=" 식물 종류 가져올 자리 "
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="내용"/>

    <EditText
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="top"
        android:hint="내용을 작성하세요"
        android:height="100dp"
        />

    <Button
        android:id="@+id/edit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="글 작성"
        android:layout_gravity="center"
        />



</LinearLayout>