<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistUser.NicknameSettingActivity"
    >

    <TextView
        android:id="@+id/userId"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="아이디 값 체크용 "
        />

    <ImageView
        android:id="@+id/image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/loading_icon"
        android:layout_above="@id/comment"
        android:maxWidth="50dp"
        android:maxHeight="50dp" />

    <TextView
        android:id="@+id/home_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="25dp"
        android:layout_toRightOf="@id/image"
        android:layout_above="@id/comment"
        android:textColor="#30BB3F"
        android:textSize="20sp"
        android:width="100dp"
        android:text="마리팜" />

    <TextView
        android:id="@+id/comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="40dp"
        android:layout_above="@id/editText"
        android:width="200dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="닉네임을 설정하세요." />

    <EditText
        android:id="@+id/editText"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_centerVertical="true"
        android:hint="닉네임 적을 공간 "
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/check_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="중복 확인 "
        android:layout_toRightOf="@id/editText"
        android:layout_alignBaseline="@id/editText"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText"
        android:layout_alignLeft="@id/editText"
        android:width="200dp"
        android:height="30dp"
        android:textSize="15sp"
        android:text="닉네임은 변경할 수 있습니다."
        />

    <TextView
        android:id="@+id/regist_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/regist_btn"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:width="300dp"
        android:height="50dp"
        android:textSize="23sp"
        android:text="사용하시겠습니까?"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/regist_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"
        android:text="예"
        android:visibility="gone"
        />

</RelativeLayout>